{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "baseUrl": "./src",
      "paths": {
        "~/*": [ "./*" ]
      },
  },
  "include": [
      "src/**/*"
  ]
}